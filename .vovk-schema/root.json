{
  "$schema": "https://vovk.dev/api/spec/v3/segment.json",
  "emitSchema": true,
  "segmentName": "",
  "controllers": {
    "UserRPC": {
      "rpcModuleName": "UserRPC",
      "originalControllerName": "UserController",
      "prefix": "users",
      "handlers": {
        "getUsers": {
          "path": "",
          "httpMethod": "GET",
          "openapi": {
            "summary": "Get all users",
            "description": "Retrieves a list of all users."
          }
        },
        "findUsers": {
          "validation": {
            "query": {
              "type": "object",
              "properties": {
                "search": {
                  "type": "string"
                }
              },
              "required": ["search"],
              "additionalProperties": false,
              "$schema": "http://json-schema.org/draft-07/schema#"
            }
          },
          "path": "find",
          "httpMethod": "GET",
          "openapi": {
            "summary": "Find users by ID, full name, or email",
            "description": "Retrieves users that match the provided ID, full name, or email. Used to search the users when they need to be updated or deleted."
          }
        },
        "createUser": {
          "validation": {
            "body": {
              "type": "object",
              "properties": {
                "fullName": {
                  "type": "string"
                },
                "email": {
                  "type": "string"
                },
                "imageUrl": {
                  "type": ["string", "null"]
                }
              },
              "required": ["fullName", "email"],
              "additionalProperties": false,
              "$schema": "http://json-schema.org/draft-07/schema#"
            }
          },
          "path": "",
          "httpMethod": "POST",
          "openapi": {
            "summary": "Create user",
            "description": "Creates a new user with the provided details."
          }
        },
        "updateUser": {
          "validation": {
            "body": {
              "type": "object",
              "properties": {
                "fullName": {
                  "type": "string"
                },
                "email": {
                  "type": "string"
                },
                "imageUrl": {
                  "type": ["string", "null"]
                }
              },
              "required": ["fullName", "email"],
              "additionalProperties": false,
              "$schema": "http://json-schema.org/draft-07/schema#"
            },
            "params": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string",
                  "format": "uuid"
                }
              },
              "required": ["id"],
              "additionalProperties": false,
              "$schema": "http://json-schema.org/draft-07/schema#"
            }
          },
          "path": ":id",
          "httpMethod": "PUT",
          "openapi": {
            "summary": "Update user",
            "description": "Updates an existing user with the provided details, such as their email or name."
          }
        },
        "deleteUser": {
          "validation": {
            "params": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string",
                  "format": "uuid"
                }
              },
              "required": ["id"],
              "additionalProperties": false,
              "$schema": "http://json-schema.org/draft-07/schema#"
            }
          },
          "path": ":id",
          "httpMethod": "DELETE",
          "openapi": {
            "summary": "Delete user",
            "description": "Deletes a user by ID."
          }
        }
      }
    },
    "AiSdkRPC": {
      "rpcModuleName": "AiSdkRPC",
      "originalControllerName": "AiSdkController",
      "prefix": "ai-sdk",
      "handlers": {
        "functionCalling": {
          "path": "function-calling",
          "httpMethod": "POST",
          "openapi": {
            "summary": "Function Calling",
            "description": "Uses [@ai-sdk/openai](https://www.npmjs.com/package/@ai-sdk/openai) and ai packages to call a function"
          }
        }
      }
    },
    "TaskRPC": {
      "rpcModuleName": "TaskRPC",
      "originalControllerName": "TaskController",
      "prefix": "tasks",
      "handlers": {
        "getTasks": {
          "path": "",
          "httpMethod": "GET",
          "openapi": {
            "summary": "Get all tasks",
            "description": "Retrieves a list of all tasks."
          }
        },
        "findTasks": {
          "validation": {
            "query": {
              "type": "object",
              "properties": {
                "search": {
                  "type": "string"
                }
              },
              "required": ["search"],
              "additionalProperties": false,
              "$schema": "http://json-schema.org/draft-07/schema#"
            }
          },
          "path": "find",
          "httpMethod": "GET",
          "openapi": {
            "summary": "Find tasks by ID, title or description",
            "description": "Retrieves tasks that match the provided ID, title, or description. Used to search the tasks when they need to be updated or deleted."
          }
        },
        "createTask": {
          "validation": {
            "body": {
              "type": "object",
              "properties": {
                "title": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                },
                "status": {
                  "type": "string",
                  "enum": ["TODO", "IN_PROGRESS", "IN_REVIEW", "DONE"]
                },
                "userId": {
                  "type": "string",
                  "format": "uuid"
                }
              },
              "required": ["title", "description", "status", "userId"],
              "additionalProperties": false,
              "$schema": "http://json-schema.org/draft-07/schema#"
            }
          },
          "path": "",
          "httpMethod": "POST",
          "openapi": {
            "summary": "Create task",
            "description": "Creates a new task with the provided details."
          }
        },
        "updateTask": {
          "validation": {
            "body": {
              "type": "object",
              "properties": {
                "title": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                },
                "status": {
                  "type": "string",
                  "enum": ["TODO", "IN_PROGRESS", "IN_REVIEW", "DONE"]
                },
                "userId": {
                  "type": "string",
                  "format": "uuid"
                }
              },
              "additionalProperties": false,
              "$schema": "http://json-schema.org/draft-07/schema#"
            },
            "params": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string",
                  "format": "uuid"
                }
              },
              "required": ["id"],
              "additionalProperties": false,
              "$schema": "http://json-schema.org/draft-07/schema#"
            }
          },
          "path": ":id",
          "httpMethod": "PUT",
          "openapi": {
            "summary": "Update task",
            "description": "Updates an existing task with the provided details, such as its title or description."
          }
        },
        "deleteTask": {
          "validation": {
            "params": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string",
                  "format": "uuid"
                }
              },
              "required": ["id"],
              "additionalProperties": false,
              "$schema": "http://json-schema.org/draft-07/schema#"
            }
          },
          "path": ":id",
          "httpMethod": "DELETE",
          "openapi": {
            "summary": "Delete task",
            "description": "Deletes a task by ID."
          }
        }
      }
    }
  }
}
